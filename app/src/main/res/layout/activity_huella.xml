<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
     android:background="#ffffff"
    tools:context=".Huella">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Te puedes Logear escaneando tu huella"
        android:textColor="#000000"
        />

    <ImageView
        android:id="@+id/huella_IV"
        android:drawableStart="@drawable/ic_stylehuella"
        android:drawableLeft="@drawable/ic_stylehuella"
        android:layout_width="75dp"
        android:layout_height="98dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/huella_inactivo" />

    <TextView
        android:id="@+id/txt_mgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        />


</LinearLayout>

